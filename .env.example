# Materials-Simulato-R Environment Variables
# Copy this file to .env and fill in your values

# Database
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_USER=postgres
POSTGRES_DB=materials_dev

MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password_here

NEO4J_AUTH=neo4j/your_neo4j_password_here

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_256_bit_secret_key_here_change_in_production

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (optional)
GOOGLE_API_KEY=your_google_api_key_here

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# API
API_HOST=0.0.0.0
API_PORT=8080

# Redis
REDIS_URL=redis://localhost:6379

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here
